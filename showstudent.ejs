<!DOCTYPE html>
<html lang="en">
<head> 
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <script type="text/javascript" src='/public/ajaxtest.js'></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
    
    
</head>

<body>
    <%- include('nav.ejs')%>
    <div class="babe" >
        <div class="form-group ml-2 mr-2">
           <center> <input type="search" class="form-control" name="name" id="nId"  placeholder="search..." onkeyup="ajaxImpl(this.value)" style="height: 50px; width: 60%; margin-top: 20px;"> </center>   
        </div>
        <table class="table table-striped" style="background-color: white;margin: auto; margin-top: 20px; width: 80%; font-size:1.2rem;">
            <thead>
                <tr><th>Sr No</th>
                <th>Name</th>
                <th>Email</th>
                <th>Contact</th>
                <th>Course Name</th>
                <th>Delete</th>
                <th>Update</th>
            </tr>
            </thead>
            <tbody id="tblBody">
                <%
            if(studentdata.length==0){
                %>
                <tr id="tri"><td colspan="6"><h3>There is no data in database</h3></td></tr>
                <%
            }
            else{ 
                studentdata.forEach((item,index)=>{
                    %>
                    <tr>
                        <td><%= (index+1) %></td>
                        <td><%= item.name %></td>
                        <td><%= item.email %></td>
                        <td><%= item.contact %></td>
                        <td><%= item.cname %></td>
                        <td><a href="/deletestudent?sid=<%= item.sid %>" class="btn btn-danger"> <i class="fas fa-trash"></i></a></td> 
                        <td><a href="/updatestudent?sid=<%= item.sid %>" class="btn btn-primary"><i class="fa-solid fa-square-pen" ></i></a></td> 
                    </tr>
                    <%
                })
            }  
                %>

            </tbody>
            </table>
    </div>   
</body>
</html>